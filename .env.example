# MongoDB Connection
MONGO_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/your-database

# JWT Secret (use a secure random string)
JWT_SECRET=your-super-secure-jwt-secret-key-here

# Node Environment
NODE_ENV=development

# Firebase Service Account (ENTIRE JSON as a single line string - for production)
# Copy the entire contents of your Firebase service account JSON file and paste as one line
# Example format:
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"churchapp-3efc3","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"firebase-adminsdk-...@churchapp-3efc3.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/v3/metadata/x509/firebase-adminsdk-...%40churchapp-3efc3.iam.gserviceaccount.com"}
FIREBASE_SERVICE_ACCOUNT=

# CLI API Key for terminal notifications (optional)
CLI_API_KEY=church-cli-2024

# Server Port
PORT=3000

# CORS Origins (comma separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
